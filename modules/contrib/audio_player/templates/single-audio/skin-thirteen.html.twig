<div class="audio-main-container">
  {% for audio in audios %}
    {% set original_url = audio.original_url %}
     <div class="audio-player skin-thirteen {{ palette }}">
        <audio class="audio-player-my-audio" src="{{ original_url }}"></audio>

        <div class="audio-player-top-row">
            <div class="audio-player-playback-controls">
                <button class="audio-player-control-button audio-player-play-pause-button">
                    <svg class="audio-player-play-icon" viewBox="0 0 24 24" fill="currentColor"><path d="M8 5v14l11-7z"/></svg>
                    <svg class="audio-player-pause-icon" viewBox="0 0 24 24" fill="currentColor" style="display: none;"><path d="M6 19h4V5H6v14zm8-14v14h4V5h-4z"/></svg>
                </button>
            </div>

            <div class="audio-player-audio-title">
                <span class="audio-player-song-name"></span>
            </div>

            <div class="audio-player-volume-controls">
                <button class="audio-player-control-button audio-player-mute-unmute-button">
                    <svg class="audio-player-volume-up-icon" viewBox="0 0 24 24" fill="currentColor"><path d="M3 9v6h4l5 5V4L7 9H3zm13.5 3c0-1.77-1.02-3.29-2.5-4.03v8.05c1.48-.73 2.5-2.25 2.5-4.02zM14 3.23v2.06c2.89.86 5 3.54 5 6.71s-2.11 5.85-5 6.71v2.06c4.01-.91 7-4.49 7-8.77s-2.99-7.86-7-8.77z"/></svg>
                    <svg class="audio-player-volume-mute-icon" style="display: none;" fill="currentColor" class="icon audio-player-volume-mute-icon" viewBox="0 0 24 24">
                        <path d="M7 9v6h4l5 5V4l-5 5H7zm12.5-3.24L17.74 5 15 7.74 12.26 5 11 6.26 13.74 9 11 11.74 12.26 13 15 10.26 17.74 13 19 11.74 16.26 9 19 6.26z"></path>
                    </svg>
                </button>
                <input type="range" class="audio-player-volume-slider" min="0" max="1" step="0.01" value="1">
            </div>
        </div>

        <div class="audio-player-bottom-row">
            <span class="audio-player-time-display audio-player-current-time">0:00</span>
            <div class="audio-player-progress-container">
                <div class="audio-player-buffered-bar"></div>
                <div class="audio-player-progress-bar"></div>
            </div>
            <span class="audio-player-time-display audio-player-total-time">0:00</span>
        </div>
    </div>
  {% endfor %}
</div>
